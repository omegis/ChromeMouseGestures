{
  "manifest_version": 3,
  "name": "Simple Mouse Gestures",
  "version": "1.6.1",
  "description": "Simple mouse gesture extension with purple trail - reload, close, and navigate tabs",
  "icons": {
    "16": "icon/favicon-16x16.png",
    "48": "icon/icon-48x48.png",
    "128": "icon/icon-128x128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mouse Gestures"
  }
}
